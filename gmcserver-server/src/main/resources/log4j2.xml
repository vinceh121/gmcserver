<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout
				pattern="%style{%d{yyyy-MM-dd HH:mm:ss}}{Magenta} %style{%highlight{%-5level}}{Bright} : %style{[%t]}{Bright} %style{[%logger{2.}]}{Cyan} - %msg%n" />
		</Console>
	</Appenders>
	<Loggers>
		<Root level="INFO">
			<AppenderRef ref="Console" />
		</Root>
	</Loggers>
</Configuration>
